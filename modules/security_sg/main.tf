locals {
  ingress_rules = [
    for port in var.allow_ports : {
      port        = port
      description = "Ingress rules for port ${port}"
    }
  ]
}


resource "aws_security_group" "sg" {
  name   = "Allow Website"
  vpc_id = var.vpc_id

  egress = [
    {
      cidr_blocks      = ["0.0.0.0/0", ]
      description      = ""
      from_port        = 0
      ipv6_cidr_blocks = []
      prefix_list_ids  = []
      protocol         = "-1"
      security_groups  = []
      self             = false
      to_port          = 0
    }
  ]
  dynamic "ingress" {
    for_each = local.ingress_rules

    content {
      description = ingress.value.description
      from_port   = ingress.value.port
      to_port     = ingress.value.port
      protocol    = "tcp"
      cidr_blocks = ["0.0.0.0/0"]
    }
  }
}
